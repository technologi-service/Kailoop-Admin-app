---
/**
 * Réplica con columnas blancas separadas por líneas (sin cards).
 * Ajuste: el header usa la imagen de dragones como BACKGROUND completo.
 */

const HERO_BG = "/src/assets/images/portada-dragones.png";         // ⬅️ Fondo del header
const HERO_BADGE = "/src/assets/images/escudo-kailoop.png";        // ⬅️ OPCIONAL: logo/escudo dentro del header

const INTRO_GLYPH = "/src/assets/images/serpiente.png";
const ICON_NEGOCIO = "/src/assets/images/neuronas-de-negocio.png";
const ICON_OPERACION = "/src/assets/images/neurona-de-operaciones.png";
const ICON_ADMIN = "/src/assets/images/neurona-de-administracion.png";
const BRAND_LOGO = "/src/assets/brand/kukulcanai-consulting.png";

const links = {
  negocio: [
    { href: "/admin/neuronas/vcs", label: "VCS", image: "/src/assets/images/select.png" },
    { href: "/admin/neuronas/rfm", label: "RFM", image: "/src/assets/images/candado.png" },
    { href: "/admin/neuronas/nps-ltv", label: "NPS/LTV", image: "/src/assets/images/candado.png" },
    { href: "/admin/neuronas/fancentric", label: "FanCentric", image: "/src/assets/images/candado.png" },
  ],
  operacion: [
    { href: "/admin/neuronas/abcd", label: "ABCD", image: "/src/assets/images/select.png" },
    { href: "/admin/neuronas/dropshipping", label: "Dropshipping", image: "/src/assets/images/candado.png" },
    { href: "/admin/neuronas/rpa", label: "RPA", image: "/src/assets/images/candado.png" },
    { href: "/admin/neuronas/iot", label: "IoT", image: "/src/assets/images/candado.png" },
  ],
  admin: [
    { href: "/admin/neuronas/productividad", label: "Productividad", image: "/src/assets/images/select.png" },
    { href: "/admin/neuronas/roi", label: "ROI", image: "/src/assets/images/candado.png" },
    { href: "/admin/neuronas/mod-atribucion", label: "Mod.Atribución", image: "/src/assets/images/candado.png" },
    { href: "/admin/neuronas/customer-equity", label: "Customer Equity", image: "/src/assets/images/candado.png" },
  ],
};
---

<style>
  :root{
    --page: #ffffff;         /* fondo general blanco */
    --ink: #0F2337;          /* texto principal */
    --muted: #5b6470;        /* texto secundario sobre blanco */
    --accent: #0099ff;       /* azul acento */
    --accent-dk: #5b6470;    /* hover link */
    --success: #65db7c;      /* “El centro de gestión…” */
    --brand: #ff5a5a;        /* “Kukulcan AI” */
    --divider: #d7dce4;      /* líneas verticales entre columnas */
  }

  /* ====== Hero con dragones ocupando TODO el fondo ====== */
  .hero{
    position: relative;
    border: 1px solid var(--accent);
    border-radius: .75rem;
    overflow: hidden;
    min-height: 260px;
    color: #f2f2f2;

    /* Fondo imagen full + centrado + cover */
    background: url({HERO_BG}) center/cover no-repeat;
  }

  /* Overlay radial para contraste de texto */
  .hero::before{
    content:"";
    position:absolute; inset:0;
    background: radial-gradient(ellipse at center,
      rgba(14,66,77,.85) 0%,
      rgba(10,36,46,.92) 55%,
      rgba(6,22,30,.96) 100%);
    pointer-events:none;
  }

  .hero__badge{ width:112px; height:112px; object-fit:contain; filter: drop-shadow(0 8px 24px rgba(0,0,0,.45));}
  .h-welcome{ letter-spacing:.02em; text-shadow:0 1px 0 rgba(0,0,0,.15);}
  .link-underline{ position:relative; display:inline-block; }
  .link-underline::after{ content:""; position:absolute; left:0; right:0; bottom:-2px; height:2px; background: currentColor; opacity:.9;}

  /* ====== Grid sin cards (columnas blancas con líneas) ====== */
  .cols{
    display:grid;
    grid-template-columns: 1.15fr repeat(3,1fr);
    gap: 0;
    background: var(--page);
  }
  @media (max-width:1024px){ .cols{ grid-template-columns: 1fr; } }

  .col{ padding: 1.25rem 1.5rem 1.5rem 1.5rem; background: var(--page); }
  .col + .col{ border-left: 2px solid var(--divider); }

  .col--intro{ position: relative; }
  @media (min-width:1025px){ .col--intro{ border-right: 2px dashed var(--divider); } }

  .head{ color: var(--ink); font-weight: 800; margin: .25rem 0 .75rem; font-size: 1.125rem; text-align: center; }
  .head--accent{ color: var(--ink); }
  .list a{ color: var(--ink); font-weight: 700; }
  .list a:hover{ color: var(--accent-dk); }
  .muted{ color: var(--muted); }

  .lock{ width:22px; height:22px; margin: .25rem auto .5rem; color: var(--accent); }

  .lower{
    background: linear-gradient(180deg, #1a2f47 0%, #142538 100%);
    border: 1px solid rgba(0,153,255,.25);
    border-radius: .75rem;
    color: #f2f2f2;
  }
  .cube{ width:18px; height:18px; transform: translateY(2px); }
</style>

<div class="bg-[color:var(--page)] text-[color:var(--ink)] font-sans px-4 sm:px-6 lg:px-10 py-4 sm:py-8">

  <!-- ====== HERO (bg dragones + overlay) ====== -->
  <header class="relative w-full min-h-[300px] sm:min-h-[360px] md:min-h-[420px] rounded-lg overflow-hidden border border-[#0099FF]">
    <!-- Fondo completo con la imagen de dragones -->
    <img src={HERO_BG} alt="Dragones y fondo" class="absolute inset-0 w-full h-full object-cover" />

    <!-- Vignette general para mejorar el contraste -->
    <div class="absolute inset-0 bg-gradient-to-b from-[#0b2233]/40 to-[#0b2233]/70 mix-blend-multiply"></div>

    <!-- Textos (siempre visibles sobre el fondo) -->
    <div class="relative z-10 h-full flex items-center justify-end">
      <div class="w-full md:w-[44%] px-4 sm:px-8 py-6 text-right">
        <p class="text-white text-3xl sm:text-4xl font-extrabold leading-tight drop-shadow-md">
          Bienvenidos a
        </p>
        <h1 class="text-white text-4xl sm:text-5xl md:text-6xl font-extrabold leading-tight drop-shadow-md">
          <span class="underline underline-offset-4 decoration-2">KAIloop Nexus</span>
        </h1>
        <p class="mt-3 text-xl sm:text-2xl italic text-[#8DF57A] drop-shadow-sm">
          El centro de gestión
        </p>
        <p class="text-xl sm:text-2xl italic text-[#8DF57A] drop-shadow-sm">
          Inteligente de <span class="font-semibold">Kukulcan AI</span>
        </p>
      </div>
    </div>
  </header>

  <!-- ====== Título sobre blanco ====== -->
  <div class="mt-6 sm:mt-8">
    <h2 class="text-center text-2xl font-semibold text-[color:var(--ink)]">
      Acceso Neuronas de <span class="link-underline">Silpro 3R</span>
    </h2>
  </div>

  <!-- ====== COLUMNAS BLANCAS CON LÍNEAS ====== -->
  <main class="mt-4 sm:mt-6">
    <div class="cols">
      <!-- Intro -->
      <section class="col col--intro">
        <div class="flex items-start gap-4">
          <img src={INTRO_GLYPH} alt="Glifo Kukulkan" class="h-90 w-auto object-contain" />
        </div>
        <p class="mt-4 muted">
          Explora tus <span class="text-[color:var(--ink)] font-bold">modelos inteligentes</span> diseñados para
          impulsar el rendimiento en todas las áreas del negocio.
        </p>
      </section>

      <!-- Negocio -->
      <section class="col text-center">
        <img src={ICON_NEGOCIO} alt="Neuronas de Negocio" class="h-48 w-auto mx-auto object-contain" />
        <h3 class="head head--accent">Neuronas de Negocio</h3>
        <ul class="list space-y-2 flex flex-col items-center">
          {links.negocio.map(i => (
            <li class="flex items-center gap-4">
      <span class="flex items-center justify-center w-16 h-16 rounded-full">
        <img src={i.image} alt={i.label} class="h-20 w-20 object-contain" />
      </span>
              <a href={i.href} class="text-lg font-semibold">{i.label}</a>
            </li>
          ))}
        </ul>
      </section>

      <!-- Operación -->
      <section class="col text-center">
        <img src={ICON_OPERACION} alt="Neuronas de Operación" class="h-48 w-auto mx-auto object-contain" />
        <h3 class="head head--accent">Neuronas de Operación</h3>
        <ul class="list space-y-2 flex flex-col items-center">
          {links.operacion.map(i => (
            <li class="flex items-center gap-4">
      <span class="flex items-center justify-center w-16 h-16rounded-full">
        <img src={i.image} alt={i.label} class="h-20 w-20 object-contain" />
      </span>
              <a href={i.href} class="text-lg font-semibold">{i.label}</a>
            </li>
          ))}
        </ul>
      </section>

      <!-- Administración -->
      <section class="col text-center">
        <img src={ICON_ADMIN} alt="Neuronas de Administración" class="h-48 w-auto mx-auto object-contain" />
        <h3 class="head head--accent">Neuronas de Administración</h3>
        <ul class="list space-y-2 flex flex-col items-center">
          {links.admin.map(i => (
            <li class="flex items-center gap-4">
      <span class="flex items-center justify-center w-16 h-16  rounded-full">
        <img src={i.image} alt={i.label} class="h-20 w-20 object-contain" />
      </span>
              <a href={i.href} class="text-lg font-semibold">{i.label}</a>
            </li>
          ))}
        </ul>
      </section>
    </div>
  </main>

<!-- ====== BANDA INFERIOR: texto + decoraciones + logo (fusionado) ====== -->
<section
  class="relative mt-6 sm:mt-8 rounded-lg overflow-hidden
         border border-[#0099FF]/25 text-white
         bg-gradient-to-b from-[#1A2F47] to-[#142538]">

  <!-- Línea decorativa de “circuito” como fondo -->
  <svg class="pointer-events-none absolute inset-0 opacity-20" viewBox="0 0 1200 220" fill="none">
    <path d="M40 200c120 0 120-60 240-60s120 60 240 60 120-60 240-60 120 60 240 60"
          stroke="currentColor" stroke-width="2" />
  </svg>

  <!-- Puntitos en la parte superior (como separadores) -->
  <div class="absolute top-0 left-0 right-0 h-6">
    <span class="absolute top-1 left-[9%] w-2 h-2 rounded-full bg-white/40"></span>
    <span class="absolute top-1 left-[38%] w-2 h-2 rounded-full bg-white/40"></span>
    <span class="absolute top-1 left-[66%] w-2 h-2 rounded-full bg-white/40"></span>
  </div>

  <!-- Contenido -->
  <div class="relative z-[1] flex items-center justify-between gap-6 px-4 sm:px-6 lg:px-10 py-4 sm:py-5">
    <!-- Texto + cubo (en una caja un poco más oscura) -->
    <div class="flex items-start gap-3 max-w-2xl bg-white/5 rounded-md p-3 shadow-inner">
      <svg class="w-[18px] h-[18px] translate-y-[2px] flex-none" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M12 2l9 5v10l-9 5-9-5V7l9-5z" stroke-width="1.5"/>
        <path d="M12 12l9-5M12 12l-9-5M12 12v10" stroke-width="1.5"/>
      </svg>
      <p class="text-sm sm:text-base leading-relaxed">
        Aquí encontrarás las neuronas diseñadas para detectar oportunidades de mercado,
        segmentar clientes de alto valor y potenciar tus estrategias de ventas.
      </p>
    </div>

    <!-- Logo a la derecha dentro de la misma banda -->
    <div class="shrink-0 flex items-center">
      <img src={BRAND_LOGO} alt="Kukulcan AI Consulting" class="h-10 w-auto opacity-95" />
    </div>
  </div>
</section>

</div>
