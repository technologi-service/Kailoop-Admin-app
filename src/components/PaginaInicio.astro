---

import background from '../assets/background.svg';
import '../styles/global.css';
---

<section class="relative h-screen flex items-center justify-center" style={`background-image: url(${background}); background-size: cover; background-position: center; background-color: #192D45;`}>
  <div class="absolute inset-0" style="background: rgba(19,27,27,0.85);"></div>
  <div class="relative z-10 p-8 rounded-lg shadow-lg max-w-md w-full" style="background-color: #222F55; border: 2px solid #0099FF;">
    <div class="flex justify-center mb-6">
      {/* <img src={astroLogo} alt="Astro Logo" class="h-20 w-20" /> */}
    </div>
    <h2 class="text-3xl font-bold text-center mb-8" style="color: #F2F2F2;">Bienvenido de Nuevo</h2>
   <form id="loginForm">
      <div class="mb-5">
        <label for="email" class="block text-sm font-semibold mb-2" style="color: #0099FF;">Correo Electrónico</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-3 rounded-lg"
          style="background-color: #ABABAA; color: #192D45; border: 1px solid #127F7F;"
          placeholder="tu@ejemplo.com"
          required
        />
      </div>
      <div class="mb-6">
        <label for="password" class="block text-sm font-semibold mb-2" style="color: #0099FF;">Contraseña</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-3 rounded-lg"
          style="background-color: #ABABAA; color: #192D45; border: 1px solid #127F7F;"
          placeholder="••••••••"
          required
        />
      </div>
      <button
        type="submit"
        class="w-full font-bold py-3 rounded-lg transition duration-200"
        style="
          background: linear-gradient(90deg, #192D45 60%, #0099FF 100%);
          color: #ABABAA;
          border: none;
        "
        onmouseover="this.style.background='linear-gradient(90deg, #0099FF 60%, #192D45 100%)'"
        onmouseout="this.style.background='linear-gradient(90deg, #192D45 60%, #0099FF 100%)'"
      >
        Iniciar Sesión
      </button>
    </form>
    <script>
      const loginForm = document.getElementById('loginForm');
      if (loginForm) {
        loginForm.addEventListener('submit', function(e) {
          e.preventDefault(); // Prevent default form submission
          window.location.href = '/admin/option';
        });
      }
    </script>
  </div>
</section>
